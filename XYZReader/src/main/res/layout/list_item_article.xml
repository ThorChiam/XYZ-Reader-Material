<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_item_margin"
    android:clickable="true"
    android:elevation="@dimen/card_elevation"
    android:focusable="true"
    android:translationZ="@dimen/card_press_translation_z">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_primary_light"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="@dimen/main_title_padding"
            android:textColor="@color/ltgray" />

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_primary_light"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingLeft="@dimen/main_title_padding"
            android:paddingRight="@dimen/main_title_padding"
            android:textColor="@color/ltgreen" />
    </LinearLayout>

</android.support.v7.widget.CardView>
